<%- include('./partials/header') %>

<% if(success.length>0){ %>
    <div class="fixed top-5 left-1/2 absolute z-10 transform -translate-x-1/2 px-3 py-2 rounded-md bg-red-500">
        <span class="text-white">
            <%= success %>
        </span>
    </div>
<% } %>

    <div class="w-full h-screen flex flex-wrap items-start px-20 py-20 gap-10">
        <% user.cart.forEach((product)=>{ %>
            <div class="w-[22%] rounded-md overflow-hidden text-[<%= product.textcolor %>]">
                <div class="w-full h-60 flex justify-center items-center bg-[<%= product.bgcolor %>]">
                    <img class="h-[13rem]" src="data:image/jpeg;base64,<%= product.image.toString('base64') %>" alt="<%= product.name %>">
                </div>
            <div class="bg-[<%= product.panelcolor %>]">
                <div class="w-full flex justify-between px-5 py-3">
                    <h3 class="text-xl"><%= product.name %></h3>
                    <div class="flex items-center gap-2">
                        <a class="" href="/discart/<%= product._id%>"><i class="hover:bg-black hover:text-white w-7 h-7 bg-white flex rounded-full items-center justify-center ri-delete-bin-7-line"></i></a>
                    </div>
                </div>
                <div class="flex items-center justify-between px-5 py-1 ">
                    <h2 class="text-lg flex gap-3">₹ <%=product.price %> <p class=" border border-[<%=product.textcolor%>] flex justify-center items-center bg-opacity-30  px-2 text-sm bg-[<%=product.panelcolor%>]-900 rounded-full"> off <%=product.discount%></p></h2>
                </div>
                <div class="flex items-center justify-between text-[<%=product.panelcolor%>] bg-[<%=product.textcolor%>] px-5 ">
                    <h4 class="text-lg  ">Net Total</h4>
                    <h2 class="text-lg font-bold">₹ <%=product.price %></h2>
                </div>
            </div>
            </div>
        <%})%>
       
        <div class="w-[67%] pb-10">
            <h3 class="text-xl">Price Breakdown</h3>
            <div class="px-10 mt-5">
                <div class="flex mt-2">
                    <h4 class="w-1/3">Total MRP</h4>
                    <h4>₹ <%=totalamount%></h4>
                </div>
                <div class="flex mt-2">
                    <h4 class="w-1/3">Discount on MRP</h4>
                    <h4>₹ <%=discountamount%></h4>
                </div>
                <div class="flex mt-2">
                    <h4 class="w-1/3">Platform Fee</h4>
                    <h4>₹ 20</h4>
                </div>
                <div class="flex mt-2">
                    <h4 class="w-1/3">Shipping Fee</h4>
                    <h4>FREE</h4>
                </div>
            </div>
            <div class="w-full h-[1px] bg-black mt-10"></div>
            <div class="flex mt-5">
                <h3 class="w-1/3 text-xl">Total Amount</h3>
                <h3 class="font-semibold text-xl text-green-600">₹ <%=finalprice%></h3>
            </div>
        </div>
    </div>
    <%- include('./partials/footer') %>